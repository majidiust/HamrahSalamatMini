<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DevicesActivity" >

	<ImageView
         android:id="@+id/imageViewBanner"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:src="@drawable/banner" />
         
    <RelativeLayout 
        android:id="@+id/layoutDevicesMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageViewBanner"
        android:layout_marginTop="64dp" >
        
        <ImageButton
			android:id="@+id/imgBtnCardioBlue"
			android:layout_width="592dp"
			android:layout_height="192dp"
			android:layout_centerHorizontal="true"
			android:background="@drawable/btn_style_cardioblue" />
        
        <ImageButton
			android:id="@+id/imgBtnSina5"
			android:layout_width="592dp"
			android:layout_height="192dp"
			android:layout_below="@+id/imgBtnCardioBlue"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="24dp"
			android:background="@drawable/btn_style_sina5" />
        
    </RelativeLayout>

</RelativeLayout>
