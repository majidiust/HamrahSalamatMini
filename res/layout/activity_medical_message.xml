<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MedicalMessageActivity" >

    <ImageView
        android:id="@+id/imageViewMedicalMessageIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_doctor" />

    <TextView
        android:id="@+id/textViewMedicalMessageTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewMedicalMessageIcon"
        android:layout_marginRight="48dp"
        android:layout_marginTop="114dp"
        android:layout_toLeftOf="@+id/imageViewMedicalMessageIcon"
        android:text="@string/activity_medical_message"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewMedicalMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textViewMedicalMessageTopic"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
      <ImageButton
            android:id="@+id/imgBtnExitMedicalMessage"
            android:layout_width="237dp"
            android:layout_height="77dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="250dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_style_exit" />
        
        <ImageButton
            android:id="@+id/imgBtnStartAppMedicalMessage"
            android:layout_width="237dp"
            android:layout_height="77dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_style_startapp" />

</RelativeLayout>
